%li{:style => "padding-left: #{level*15}px", :id => "group_#{group.id}"}
  = link_to group.name, group.homepage.nil? ? group_url(group) : group.homepage.path
  - if children.any?
    %ul
      - children.each do |child, grandchildren|
        = render_group_node child, :level => level + 1, :simple => simple, :children => grandchildren
